<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.DashboardFragment">

    <include android:id="@+id/top_navbar"
            layout="@layout/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

    <include android:id="@+id/title"
            layout="@layout/include_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />

    <ScrollView android:layout_weight="80"
            android:scrollbars="none"
            android:layout_marginHorizontal="@dimen/margin_start_end_sidewall"
            android:layout_marginVertical="@dimen/margin_top_sidewall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="15dp"
            android:gravity="center"
            android:padding="0dp">

        <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- Top big box -->
            <LinearLayout android:background="@drawable/box"
                    android:layout_marginBottom="@dimen/margin_big_card_bottom"
                    android:elevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="225dp">

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/top_big_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

            </LinearLayout>

            <!-- Middle small boxes-->
            <LinearLayout android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/margin_big_card_bottom"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                <!-- Left box -->
                <LinearLayout android:layout_weight="1"
                        android:background="@drawable/box"
                        android:layout_marginEnd="@dimen/margin_small_card_side"
                        android:elevation="5dp"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/bottom_left_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                </LinearLayout>


                <!-- Right box -->
                <LinearLayout android:layout_weight="1"
                        android:background="@drawable/box"
                        android:layout_marginStart="@dimen/margin_small_card_side"
                        android:elevation="5dp"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/bottom_right_box"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bottom Small box -->
            <LinearLayout android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:elevation="5dp"
                    android:layout_marginBottom="@dimen/margin_big_card_bottom"
                    android:orientation="horizontal">

                <TextView android:text="List Available items"
                        android:gravity="center"
                        android:textColor="@color/main_writing_color"
                        android:fontFamily="@font/gadugib"
                        android:id="@+id/list_items_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="20dp"
                        android:background="@drawable/box"
                        android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- Bottom big box -->
            <LinearLayout android:background="@drawable/box"
                    android:layout_marginBottom="@dimen/margin_big_card_bottom"
                    android:elevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/bottom_big_box"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom navigation-->
    <include android:id="@+id/navigation_bar"
            layout="@layout/include_bottom_navbar"
            android:layout_width="match_parent"
            android:layout_height="57dp" />

</LinearLayout>