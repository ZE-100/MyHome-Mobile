<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.RoomFragment">

    <include android:id="@+id/top_navbar"
            layout="@layout/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

    <include android:id="@+id/title"
            layout="@layout/include_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />

    <!-- TODO: Little scrollbar with pictures to choose a room -->
    <LinearLayout android:layout_weight="80"
            android:layout_marginHorizontal="@dimen/margin_start_end_sidewall"
            android:layout_marginVertical="@dimen/margin_top_sidewall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/box"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="0dp"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical">


            <ImageView
                    android:layout_width="55dp"
                    android:layout_height="45dp"
                    android:src="@drawable/arrow_left"
                    android:id="@+id/change_room_to_left_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.52"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" />

            <TextView android:id="@+id/roomTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Andrei's Bedroom"
                    android:fontFamily="@font/gadugib"
                    android:textColor="@color/main_writing_color"
                    android:textSize="20sp"
                    android:textAlignment="center"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/edit_current_room"
                    app:layout_constraintHorizontal_bias="1.0" />

            <ImageView
                    android:layout_width="44dp"
                    android:layout_height="38dp"
                    android:src="@drawable/edit_icon"
                    app:itemIconTint="@color/main_writing_color"
                    android:id="@+id/edit_current_room"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/change_room_to_left_btn"
                    app:layout_constraintEnd_toEndOf="@+id/change_room_to_right_btn"
                    app:layout_constraintHorizontal_bias="0.743" />

            <ImageView
                    android:layout_width="55dp"
                    android:layout_height="45dp"
                    android:src="@drawable/arrow_right"
                    android:id="@+id/change_room_to_right_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.52"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView android:src="@drawable/roomphoto"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:id="@+id/room_photo" />

        <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20th May"
                android:textColor="@color/paragraph_color"
                android:fontFamily="@font/gadugib"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:textSize="18sp" />

        <LinearLayout android:layout_width="match_parent"
                android:layout_height="200dp"/>

        <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes:"
                android:fontFamily="@font/gadugib"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/main_writing_color"
                android:textSize="18sp" />

        <TextView android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Need to buy new desk. Ikea 2m length at least. Upgrade to hue light"
                android:fontFamily="@font/gadugib"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/paragraph_color"
                android:textSize="14sp" />
    </LinearLayout>


    <!-- Bottom navigation-->
    <include android:id="@+id/navigation_bar"
            layout="@layout/include_bottom_navbar"
            android:layout_width="match_parent"
            android:layout_height="57dp" />

</LinearLayout>