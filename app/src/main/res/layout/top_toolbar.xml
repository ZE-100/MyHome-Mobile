<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top_sidewall"
        android:background="@color/white">

        <LinearLayout android:layout_weight="1"
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <LinearLayout android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_start_end_sidewall"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                <ImageView android:id="@+id/backButtonImage"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/back_arrow" />


                <TextView android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:text="@string/text_back_button"
                        android:textColor="@color/main_writing_color"
                        android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_marginEnd="@dimen/margin_start_end_sidewall"
                android:layout_width="80dp"
                android:layout_height="match_parent">

            <ImageView android:id="@+id/account_settingsButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/btn_account_settings" />

        </LinearLayout>

</LinearLayout>