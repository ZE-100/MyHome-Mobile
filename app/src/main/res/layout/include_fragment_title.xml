<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <LinearLayout android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin_start_end_sidewall"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_title_default"
                android:textSize="35sp"
                android:textColor="@color/main_writing_color"
                android:fontFamily="@font/gadugib"
                android:layout_marginTop="5dp" />

        <ImageView android:src="@drawable/home_icon"
                android:layout_width="48dp"
                android:layout_height="42dp"
                android:id="@+id/title_icon"
                android:layout_marginTop="5dp" />
    </LinearLayout>
</LinearLayout>